{
  "name": "@tamyla/ui-platform",
  "version": "1.0.0",
  "description": "Unified UI Platform - Centralizes and orchestrates @tamyla/ui-components and @tamyla/ui-components-react",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./vanilla": {
      "import": "./dist/vanilla/index.esm.js",
      "require": "./dist/vanilla/index.cjs",
      "types": "./dist/vanilla/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.esm.js",
      "require": "./dist/react/index.cjs",
      "types": "./dist/react/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.esm.js",
      "require": "./dist/core/index.cjs",
      "types": "./dist/core/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/tokens/index.esm.js",
      "require": "./dist/tokens/index.cjs",
      "types": "./dist/tokens/index.d.ts"
    },
    "./css": "./dist/tamyla-ui-platform.css"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "dev:platform": "rollup -c -w",
    "build": "rimraf dist && rollup -c && tsc --emitDeclarationOnly",
    "build:clean": "rimraf dist",
    "build:packages": "echo 'Packages built separately'",
    "build:platform": "rollup -c && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf dist node_modules/.cache",
    "test": "echo 'Tests run via workspace packages'",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "docs": "npm run docs:build && npm run docs:serve",
    "docs:build": "typedoc --out docs src/index.ts",
    "docs:serve": "http-server docs -p 8080",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "sync:preview": "echo 'Sync commands not needed for standalone package'",
    "sync:repositories": "echo 'Sync commands not needed for standalone package'",
    "publish:packages": "echo 'Individual packages published separately'",
    "publish:platform": "npm publish",
    "publish:all": "npm run publish:packages && npm run publish:platform",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "sync:versions": "echo 'Version sync not needed for standalone package'",
    "validate": "npm run lint && npm run type-check && npm run test",
    "validate:ci": "npm run validate && npm run test:integration",
    "bootstrap": "npm install && npm run build",
    "reset": "npm run clean && rm -rf node_modules package-lock.json && npm run bootstrap",
    "playground": "node scripts/playground.js",
    "demo": "http-server playground -p 3000",
    "analyze": "npm run build && npx bundle-analyzer dist/index.esm.js",
    "security": "npm audit",
    "update": "npx npm-check-updates -u"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "@tamyla/ui-components": "^2.0.0",
    "@tamyla/ui-components-react": "^1.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/addon-interactions": "^7.6.6",
    "@storybook/addon-links": "^7.6.6",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/blocks": "^7.6.6",
    "@storybook/react": "^7.6.6",
    "@storybook/react-vite": "^7.6.6",
    "@storybook/test": "^7.6.6",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.1",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.49.0",
    "rollup-plugin-dts": "^6.2.3",
    "storybook": "^7.6.6",
    "typedoc": "^0.25.4",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tamylaa/ui-platform.git"
  },
  "keywords": [
    "ui-platform",
    "ui-components",
    "react",
    "vanilla-js",
    "typescript",
    "design-system",
    "factory-pattern",
    "orchestration",
    "tamyla"
  ],
  "author": "Tamyla Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tamylaa/ui-platform/issues"
  },
  "homepage": "https://github.com/tamylaa/ui-platform#readme"
}
